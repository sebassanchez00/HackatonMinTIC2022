# EditorConfig: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Every file
[*]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
end_of_line = lf


# Indentation override for all JS
[*.js]
quote_type = single

# Indentation override for all md
[*.md]
max_line_length = off
trim_trailing_whitespace = false
